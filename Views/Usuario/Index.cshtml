@model IEnumerable<Parcial1.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado</h1>

<p>
    <a class="btn btn-primary" asp-action="Create" role="button">Crear</a>
    @* <button type="button" class="btn btn-secondary btn-lg"><a asp-action="Create">Crear nuevo Usuario</a></button> *@
</p>
<table class="table table striped">
    <thead class="thead-primary">
        <tr class="table-primary">
            <th>
                @Html.DisplayNameFor(model => model.Usuarioo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contraseña)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fechanacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.documento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nacionalidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.domicilio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.terminos)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Usuarioo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contraseña)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fechanacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.documento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nacionalidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.domicilio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.terminos)
            </td>
            <td>    
                <button class="btn btn-primary btn-sm">
                <a class="text-dark" asp-action="Edit" asp-route-id="@item.ID"  >Editar</a>
                <button class="btn btn-secondary btn-sm">
                <a class="text-dark" asp-action="Details" asp-route-id="@item.ID" >Detalle</a>
                <button class="btn btn-danger btn-sm">
                <a class="text-dark" asp-action="Delete" asp-route-id="@item.ID" >Eliminar</a>    
            </td>
        </tr>
}
    </tbody>
</table>
